{% extends 'AuderoWebBundle::base.html.twig' %}

{% block body %}
    <h1>NORAI</h1>
    <ul class="wishes" data-prototype="{{ form_widget(wish_list_form.wishes.vars.prototype)|e }}">
    </ul>

    {{ form_start(wish_list_form) }}
        <div id="wishList">
            {% for wish in wish_list_form.wishes %}
                <li>{{ form_widget(wish.title) }} {{ form_widget(wish.position) }}</li>
            {% endfor %}
        </div>
        {{ form_widget(wish_list_form.submit) }}
    {{ form_end(wish_list_form) }}

    <div class="input_fields_wrap">
        <button class="add_field_button">Add More Fields</button>
    </div>

<ul id="sortable">
    <li class="ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>Item 1</li>
    <li class="ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>Item 2</li>
</ul>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('bundles/auderoweb/js/profile.js') }}" type="text/javascript"></script>
{% endblock %}
