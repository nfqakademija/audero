{% extends 'AuderoWebBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        {% for request in requests %}
        <div class="col-lg-12">
            <hr>
        </div>
        <div class="col-md-8">
            <h1>Show: {{ request.title }}</h1>
            {% for response in request.getResponses() %}
                <img src="{{ response.getPhoto() }}" class="img-responsive" width="780" height="auto">
            {% endfor %}
            <blockquote>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <small>by DeiWee / 11 hours ago</small>
            </blockquote>
        </div>
        <div class="col-md-4">
            <!--Vote block-->
            <div class="panel panel-default">
                <div class="panel-heading">Decide image fate</div>
                <div class="panel-body">
                    <p><a href="#" class="btn btn-default btn-lg btn-block">Like</a></p>
                    <p class="text-center">
                        <a href="#" class="btn btn-info">Share</a>
                        <a href="#" class="btn btn-warning">Report</a>
                        <a href="#" class="btn btn-danger">Dislike</a>
                    </p>
                </div>
            </div>
            <!--Vote block-->

            <!--Image points-->
            <div class="panel panel-default">
                <div class="panel-heading">Image points</div>
                <div class="panel-body">
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" style="width: 75%">
                            100
                        </div>
                        <div class="progress-bar progress-bar-danger" style="width: 25%">
                            654
                        </div>
                    </div>
                </div>
            </div>
            <!--Image points-->

            <!--Tags-->
            <div class="panel panel-default">
                <div class="panel-heading">Image tags</div>
                <div class="panel-body">
                    <span class="label label-default">Wood</span>
                    <span class="label label-default">Green</span>
                    <span class="label label-default">Sun</span>
                </div>
            </div>
            <!--Tags-->

        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="{{ asset('bundles/auderoweb/js/autobahn.min.js') }}"></script>
<script>
    var conn = new ab.Session('ws://localhost:8080',
            function() {
                conn.subscribe('test1Category', function(topic, data) {
                    // This is where you would add the new article to the DOM (beyond the scope of this tutorial)
                    console.log('naujas request' + data.title);
                });
                conn.subscribe('test2Category', function(topic, data) {
                    // This is where you would add the new article to the DOM (beyond the scope of this tutorial)
                    console.log('Naujas response' + data.title);
                });
            },
            function() {
                console.warn('WebSocket connection closed');
            },
            {'skipSubprotocolCheck': true}
    );
</script>

{% endblock %}
