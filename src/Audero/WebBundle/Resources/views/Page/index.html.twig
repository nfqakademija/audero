{% extends 'AuderoWebBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        {% for request in requests %}
        <div class="col-lg-12">
            <hr>
        </div>
            {% for response in request.getResponses() %}
        <div class="col-md-8">
            <h1>Show: {{ request.title }}</h1>

                <img src="{{ response.getPhoto() }}" class="img-responsive" width="780" height="auto">

            <blockquote>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <small>by DeiWee / 11 hours ago</small>
            </blockquote>
        </div>
        <div class="col-md-4">
            <!--Vote block-->
            <div class="panel panel-default">
                <div class="panel-heading">Decide image fate</div>
                <div class="panel-body">
                    <p><a href="#" id="like_button" class="btn btn-default btn-lg btn-block" data-slug="{{ request.slug }}" data-nr="0" data-rate="1">Like</a></p>
                    <p class="text-center">
                        <a href="#" class="btn btn-info">Share</a>
                        <a href="#" class="btn btn-warning">Report</a>
                        <a href="#" id="dislike_button" class="btn btn-danger" data-slug="{{ request.slug }}" data-nr="0" data-rate="0">Dislike</a>
                    </p>
                </div>
            </div>
            <!--Vote block-->

            <!--Image points-->
            <div class="panel panel-default">
                <div class="panel-heading">Image points</div>
                <div class="panel-body">
                    <div class="progress">
                        {% if response.positiveRatingsCount + response.negativeRatingsCount > 0 %}
                            <div class="progress-bar progress-bar-success" style="width: {{ 100 * response.positiveRatingsCount / (response.positiveRatingsCount + response.negativeRatingsCount) }}%">
                                {{ response.positiveRatingsCount }}
                            </div>
                            <div class="progress-bar progress-bar-danger" style="width: {{ 100 - 100 * response.positiveRatingsCount / (response.positiveRatingsCount + response.negativeRatingsCount) }}%">
                                {{ response.negativeRatingsCount }}
                            </div>
                        {% else %}
                            <div class="progress-bar progress-bar-success" style="width: 50%">
                                0
                            </div>
                            <div class="progress-bar progress-bar-danger" style="width: 50%">
                                0
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <!--Image points-->

            <!--Tags-->
            <div class="panel panel-default">
                <div class="panel-heading">Image tags</div>
                <div class="panel-body">
                    <span class="label label-default">Wood</span>
                    <span class="label label-default">Green</span>
                    <span class="label label-default">Sun</span>
                </div>
            </div>
            <!--Tags-->

        </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    $('#like_button').click(function(){
        $.ajax({
            type: "POST",
            url: '/app_dev.php/rating/create',
            data: {slug: $(this).data('slug'), nr: $(this).data('nr'), rate: $(this).data('rate')}
        });
    });

    $('#dislike_button').click(function(){
        $.ajax({
            type: "POST",
            url: '/app_dev.php/rating/create',
            data: {slug: $(this).data('slug'), nr: $(this).data('nr'), rate: $(this).data('rate')}
        });
    });

</script>

{% endblock %}
