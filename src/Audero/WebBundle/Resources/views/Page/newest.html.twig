{% extends 'AuderoWebBundle::base.html.twig' %}

{% block body %}
    <div id="content-category" data-category="newest"></div>
    <div class="container">
        <br/>
        <div id ="content" class="row"></div>
        <div class="text-center" id="small-ajax-loader" style="display: none;">
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('bundles/auderoweb/js/page.js') }}" type="text/javascript"></script>
    <script>
        $.ajax({
            url: "/load/" + $('#content-category').data('category'),
            type: 'POST',
            success: function(html)
            {
                $("#content").append(html);
                $('#big-ajax-loader').hide();
            }
        });
    </script>

{% endblock %}
