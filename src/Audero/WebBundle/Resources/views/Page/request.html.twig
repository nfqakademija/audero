{% extends 'AuderoWebBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h2>Show me: {{ request.title }}</h2>
            <hr>
            {% for response in request.responses %}
                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <a class="thumbnail" href="{{ path('web_page_singleResponse', {'slug': response.request.slug, 'author': response.user.username}) }}">
                        <img class="img-responsive" src="http://i.imgur.com/{{ response.photoId }}m.jpg" alt="">
                    </a>
                </div>
            {% endfor %}

        </div>
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'showphoto'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

    </div>

{% endblock %}

