{% for response in responses %}
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="{{ path('web_page_singleResponse',
                        {'slug': response.request.slug,
                        'author':response.user.username}) }}"
                       class="btn btn-default btn-xs"
                       style="color:white">SHOW ME:</a>
                    <a href="{{ path('web_page_singleResponse',
                        {'slug': response.request.slug,
                        'author':response.user.username}) }}">
                        {{ response.request.title }}
                    </a>
                </h3>
            </div>
            <div class="panel-body">
                <a href="{{ path('web_page_singleResponse', {'slug': response.request.slug, 'author':response.user.username}) }}">
                    <img src="http://i.imgur.com/{{ response.photoId }}l.jpg" align="center" class="img-responsive center-block" >
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <!--Vote block-->
        <div class="panel panel-default">
            <div class="panel-heading" >
                <a style="color: black; font-size: 16px" href="{{ path('web_profile_user',
                {'username':response.user.username}) }}">
                    @{{ response.user.username }}
                </a>
                {{ response.date|date('Y-m-d h:i:s') }}
            </div>
            <div class="panel-body">
                <p><a href="#"
                      {% if ratings[response.id] is defined and ratings[response.id] == true %}
                          class="btn btn-default btn-lg btn-block like_button active"
                      {% else %}
                          class="btn btn-default btn-lg btn-block like_button"
                      {% endif %}
                      data-request_slug="{{ response.request.slug}}"
                      data-response_author="{{ response.user.username}}">
                        <i class="fa fa-thumbs-up"></i>
                        Like
                    </a>
                </p>
                <p class="text-center">
                    <a href="{{ path('web_page_singleResponse', {'slug': response.request.slug, 'author':response.user.username}) }}" class="btn btn-info">Comment</a>
                    <a href="{{ path('web_page_singleRequest', {'slug': response.request.slug}) }}" class="btn btn-warning">View All</a>
                    <a href="#"
                        {% if ratings[response.id] is defined and ratings[response.id] == false %}
                            class="btn btn-danger dislike_button active"
                        {% else %}
                            class="btn btn-danger dislike_button"
                        {% endif %}
                        data-request_slug="{{ response.request.slug}}"
                        data-response_author="{{ response.user.username}}">
                        Dislike
                    </a>
                </p>
            </div>
            <div class="panel-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-success"
                         data-request_slug="{{ response.request.slug}}"
                         data-response_author="{{ response.user.username}}"
                            {% if response.likes + response.dislikes > 0 %}
                         style="width: {{ 100 * response.likes / (response.likes + response.dislikes) }}%" >
                        {{ response.likes }}
                        {%  else %}
                            >
                        {% endif %}
                    </div>
                    <div class="progress-bar progress-bar-danger"
                         data-request_slug="{{ response.request.slug}}"
                         data-response_author="{{ response.user.username}}"

                            {% if response.likes + response.dislikes > 0 %}
                         style="width: {{ 100-100 * response.likes / (response.likes + response.dislikes) }}%" >
                        {{ response.dislikes }}
                        {%  else %}
                            >
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <!--Vote block-->

        <!--Image points-->
        <!--Image points-->
    </div>
    <div class="col-lg-12">
        <hr>
    </div>
{% endfor %}