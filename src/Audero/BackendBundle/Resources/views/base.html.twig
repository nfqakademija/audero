<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ShowPhoto</title>

    {% block stylesheets  %}
        {% stylesheets filter='cssrewrite'
        '@AuderoBackendBundle/Resources/public/css/bootstrap.min.css'
        '@AuderoBackendBundle/Resources/public/css/sb-admin.css'
        '@AuderoBackendBundle/Resources/public/css/plugins/morris.css'
        'font-awesome-4.1.0/css/font-awesome.min.css'
        'bootstrap-table/bootstrap-table.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

    {% endblock %}

    {% block javascripts %}
    {% javascripts
    '@AuderoBackendBundle/Resources/public/js/libs/jquery-1.11.0.js'
    '@AuderoBackendBundle/Resources/public/js/libs/bootstrap.min.js'
    '@AuderoBackendBundle/Resources/public/js/plugins/morris/raphael.min.js'
    '@AuderoBackendBundle/Resources/public/js/plugins/morris/morris.min.js'
    '@AuderoBackendBundle/Resources/public/js/plugins/morris/morris-data.js'
    'bootstrap-table/bootstrap-table.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a href="#"  class="navbar-brand" style="margin-top: -10px;"><img src="{{ asset('img/logo.png') }}" alt="ShowPhoto.me"/></a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li>
                    <a href="{{ path('web_page_index') }}">Back to the site</a>
                </li>
                <li>
                    <a href="#">Logout</a>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="{{ path('backend_dashboard_index') }}"><i class="fa fa-fw fa-dashboard"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_user_index') }}"><i class="fa fa-fw fa-dashboard"></i>Users</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_request_index') }}"><i class="fa fa-fw fa-dashboard"></i>Requests</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_response_index') }}"><i class="fa fa-fw fa-dashboard"></i>Responses</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_options_index') }}"><i class="fa fa-fw fa-dashboard"></i>Game options</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            <div class="container-fluid">
            <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {% block body_header %}Dashboard{% endblock %}
                        </h1>
                        <ol class="breadcrumb">
                            {% block body_path %}
                            <li>
                                <i class="fa fa-dashboard"></i> Dashboard
                            </li>
                            {% endblock %}
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
            {% block body %}

            {% endblock %}
            </div>
        </div>
        <!-- /#page-wrapper -->


    </div>
    <!-- /#wrapper -->

    {% endblock %}

    {% block scripts %}
    {% endblock %}

</body>

</html>
