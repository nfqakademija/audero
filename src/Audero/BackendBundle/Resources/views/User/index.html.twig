{% extends "AuderoBackendBundle::base.html.twig" %}

{% block title %}AuderoBackendBundle:User:index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Slapyvardis</th>
                        <th>El. Pastas</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
