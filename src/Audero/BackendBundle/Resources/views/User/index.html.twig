{% extends "AuderoBackendBundle::base.html.twig" %}

{% block title %}AuderoBackendBundle:User:index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Slapyvardis</th>
                        <th>El. Pastas</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <table id="table-javascript"></table>
    <script type="text/javascript">
        $('#table-javascript').bootstrapTable({
            method: 'get',
            url: '/data2.json',
            cache: false,
            height: 400,
            striped: true,
            pagination: true,
            pageSize: 50,
            pageList: [10, 25, 50, 100, 200],
            search: true,
            showColumns: true,
            showRefresh: true,
            minimumCountColumns: 2,
            clickToSelect: true,
            columns: [{
                field: 'state',
                checkbox: true
            }, {
                field: 'id',
                title: 'Item ID',
                align: 'right',
                valign: 'bottom',
                sortable: true
            }]
        });
    </script>
    <!-- /.row -->
{% endblock %}
